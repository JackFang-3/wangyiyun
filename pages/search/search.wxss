.searchContainer{
    padding: 20rpx;
}
.header{
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}

.searchInput{
    position: relative;
    flex: 1;
    background-color: rgba(237,237,237,0.3);
    border-radius: 30rpx;
}

.searchInput .clear{
    position: absolute;
    right: 10rpx;
    top: 0;
    font-size: 26rpx;
    z-index: 10;
}

.cancal{
    width: 100rpx;
    text-align: center;
}

.searchIcon{
    position: absolute;
    left: 15rpx;
}

.searchInput input{
    margin-left: 50rpx;
    height: 60rpx;
}

.input-placeholder{
    font-size: 28rpx;
}

.hotContainer .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.hotList{
    display: flex;
    flex-wrap: wrap;
}

.hotList .hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order{
    margin: 0 10rpx;    
}

.hotItem image{
    width: 35rpx;
    height:20rpx;
    margin-left: 10rpx;

}

.hotSong{
    font-weight: bold;
}

.searchContent{
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #de3c33;
    font-size: 24rpx;
}

.searchList{
    display: flex;
    flex-direction: column;
}

.searchList .searchItem{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #000;
    display: flex;
}

.searchItem .content{
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.history{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
    margin: 10rpx 0;
}
.history .title{
    font-size: 28rpx;
    height: 50rpx;
    margin-top: 10rpx;
}
.history .historyItem{
    font-size: 26rpx;
    margin-left: 20rpx;
    background-color: #ededed;
    padding: 0 30rpx;
    border-radius: 20rpx;
    height: 50rpx;
    margin-top: 10rpx;
}

.history .delete{
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font: 36rpx;
}


